<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="13dp"
        android:layout_marginTop="4dp"
        android:layout_marginRight="12.3dp"
        android:layout_marginBottom="10.7dp"
        app:cardCornerRadius="9.3dp"
        app:cardElevation="1dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <LinearLayout
                android:id="@+id/live"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="13.5dp"
                android:gravity="center"
                android:orientation="horizontal"
                android:paddingRight="10dp">

                <ImageView
                    android:layout_width="6dp"
                    android:layout_height="6dp"
                    android:layout_marginRight="4dp"
                    android:src="@drawable/ic_ellipse_3" />


                <customfonts.MyTextView_Roboto_Medium
                    android:id="@+id/live1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="LIVE"
                    android:textColor="#e85050"
                    android:textSize="11sp" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="2dp"
                android:gravity="center"
                android:orientation="horizontal">

                <customfonts.MyTextView_Roboto_Medium
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:text="Japan"
                    android:textColor="#383838"
                    android:textSize="12.7sp" />

                <ImageView
                    android:layout_width="24dp"
                    android:layout_height="15dp"
                    android:scaleType="fitXY"
                    android:src="@drawable/ic_japan" />

                <customfonts.MyTextView_Roboto_Medium
                    android:id="@+id/score"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:text="0 - 0 "
                    android:textColor="#c9bc93"
                    android:textSize="13.7sp" />

                <ImageView
                    android:layout_width="24dp"
                    android:layout_height="15dp"
                    android:scaleType="fitXY"
                    android:src="@drawable/ic_france" />


                <customfonts.MyTextView_Roboto_Medium
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:text="France"
                    android:textColor="#383838"
                    android:textSize="12.7sp" />


            </LinearLayout>

            <customfonts.MyTextView_Roboto_Medium
                android:id="@+id/groupid"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginTop="13dp"
                android:layout_marginBottom="18dp"
                android:text="Group C"
                android:textColor="#cccfdc"
                android:textSize="10sp" />


        </LinearLayout>
    </android.support.v7.widget.CardView>

</LinearLayout>